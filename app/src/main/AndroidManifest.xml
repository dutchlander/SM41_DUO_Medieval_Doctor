<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ruud.medievaldoctor">
    //add permission to be able to use internet
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".login" />
        <activity android:name=".MainMenu" />
        <activity android:name=".map" />
        <activity android:name=".store" />
        <activity android:name=".battle" />
        <activity android:name=".signUp" />
        <activity android:name=".preText" />
        <activity android:name=".afterText"></activity>
        <service android:name=".MusicService" android:stopWithTask="true"/>
    </application>

</manifest>